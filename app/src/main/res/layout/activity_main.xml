<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--后续根据是否有必要拓展，才修改为RecycleView-->
    <Button
        android:id="@+id/btn_recite_java"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. 记忆Java题"/>

    <Button
        android:id="@+id/btn_recite_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. 记忆Android题"/>

    <Button
        android:id="@+id/btn_recite_algorithm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. 记忆算法题"/>

    <Button
        android:id="@+id/btn_recite_android_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. 记忆Android系统题"/>

    <Button
        android:id="@+id/btn_recite_regular_expression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. 记忆正则表达式"/>

    <Button
        android:id="@+id/btn_recite_sqlite3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. 记忆数据库语句"/>
    <Button
        android:id="@+id/btn_recite_power_consumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7. 记忆功耗续航"/>
    <Button
        android:id="@+id/btn_recite_performance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8. 记忆性能优化"/>
    <Button
        android:id="@+id/btn_recite_design_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9. 记忆设计模式"/>
</LinearLayout>